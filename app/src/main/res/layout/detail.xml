<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.amaliaintansafura_1202150248_modul3.DetailActivity">

    <TextView

        android:id="@+id/titleDetail"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_placeholder"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/dummyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDetail"
        android:text="@string/dummy_text"/>



    <ImageView
        android:id="@+id/mineralLevel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/dummyTxt"
        android:src="@drawable/gambarbattery"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>


    <ImageView
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tambahLevel"
        android:src="@drawable/ic_plus"
        android:layout_below="@id/mineralLevel"
        android:layout_toEndOf="@id/mineralLevel"
        android:layout_toRightOf="@id/mineralLevel"/>


    <TextView
        android:id="@+id/mineralIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/mineralLevel"
        android:layout_centerHorizontal="true"
        android:text="1L" />

    <ImageView
        android:id="@+id/buttonMinus"
        android:src="@drawable/ic_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mineralLevel"
        android:layout_toLeftOf="@id/mineralLevel"
        android:onClick="kurangiLevel"/>

</RelativeLayout>

</ScrollView>
